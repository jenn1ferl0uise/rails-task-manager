  <div class="container">

    <h1><%= @task.title %></h1>

  <div>
    <p>
      <%= @task.details %>
      <%= link_to raw('<i class="far fa-trash-alt"></i>'), tasks_path,
        method: :delete,
        data: { confirm: "Are you sure?" } %>

    </p>
  </div>

  <div class="form-check">
    <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
    <label class="form-check-label" for="defaultCheck1">
      This task is not completed yet
    </label>
  </div>

  <%= link_to "Update task?", edit_path
  method: :edit %>

  <%= link_to "Back to list", tasks_path %>

</div>
